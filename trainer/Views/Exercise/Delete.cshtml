@model trainer.Models.Exercise

@{
    ViewData["Title"] = "Delete";
}

<div class="row row-fill-height">
    <div class="col-lg-4 backg-columns exerciseList exerciseListInfo m-auto p-3">
        <div class="row">
            <h4 class="col-6">Are you sure you want to delete this exercise?</h4>
            <a asp-action="Index" class="col-1 m-auto">
                <button class="btn btn-primary">Back</button>
            </a>
        </div>
        
        <hr/>
        <dl>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.MuscleGroup)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MuscleGroup)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.RequiresGym)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RequiresGym)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.GifUrl)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.GifUrl)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id"/>
            <input type="submit" value="Delete" class="btn btn-danger"/>
        </form>
        
    </div>
</div>
